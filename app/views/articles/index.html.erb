<div class="container">
    <p class="t-theme ml-5 mt-5"><%= @user.nickname %>さんがいいね！した記事</p>
        <div class="row account-article d-block ml-5 w-100 mx-auto animated fadeInRight">
            <% if @articles.blank? %>
                <p class="follow-list about text-center">いいね！した記事はまだありません</p>
            <% else %>
            <% @articles.each do |article| %>
                <%= link_to(user_article_path(article.user_id,article.id), class: 'link') do %>
                        <div class="d-block d-inline m-5 p-5 article d-flex align-items-center hover">
                            <% if article.article_image.present? %>
                                <%= attachment_image_tag article, :article_image,　format: 'jpeg/png', class: "rounded", size: "280x220" %>
                            <% else %>
                                <%= attachment_image_tag article, :article_image,　format: 'jpeg/png', fallback: "/images/article_eyecatch.png", class: "rounded", size: "280x220" %>
                            <% end %>
                            <div class="d-inline-block col-9">
                                <div class="d-block ml-4">
                                    <i class="far fa-clock"></i>
                                    <%= l article.created_at, format: :short %>
                                </div>
                                <div class="d-block user_article_title">
                                    <%= article.title %>
                                </div>
                                <div class="article-tag mt-5">
                                    <div class="part_list d-block ml-3 mt-5 my-2">
                                        <% if article.part_list.present? %>
                                            <% article.part_list.each do |tag| %>
                                                <div class="label label-success">Part<%= tag %></div>
                                            <% end %>
                                        <% end %>
                                    </div>

                                    <div class="key_word_list d-block ml-3 mt-4">
                                        <% if article.key_word_list.present? %>
                                            <% article.key_word_list.each do |tag| %>
                                                <div class="label label-info"><%= tag %></div>
                                            <% end %>
                                        <% end %>
                                    </div>
                                    <% if current_user.id == article.user_id %>
                                        <div class="d-block text-right">
                                            <%= link_to  image_tag("/images/edit.png", width: '20', height: '20', alt: "edit_icon"), edit_user_article_path(@user,article.id), class: "btn btn-normal icon-hover" %>
                                            <%= link_to  image_tag("/images/delete.png", width: '20', height: '20', alt: "delete_icon"), user_article_path(@user,article.id), method: :'delete',"data-confirm" => "本当に削除しますか？", class: "btn btn-normal icon-hover" %>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                <% end %>
            <% end %>
            <% end %>
            <div class="text-center">
                <%= paginate @articles %>
            </div>
        </div>
    </div>