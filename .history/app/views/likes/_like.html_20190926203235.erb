  <% if current_user.already_liked?(@article) %>
    <div class= "animated jello d-inline-block">
      <%= link_to image_tag("/images/de_good.png", width: '45', height: '45', alt: "de_good_icon"), user_article_like_path(current_user.id,@article.id,@like.id), method: :delete, remote: true %>
    </div>
    <div class="animated flipInX ml-3 d-inline-block count">
        <%= @article.likes.count %>
    </div>
  <% else %>
    <div class= "animated jello d-inline-block">
      <%= link_to image_tag("/images/good.png", width: '45', height: '45', alt: "good_icon"), user_article_likes_path(current_user.id,@article.id), method: :post, remote: true %>
    </div>
    <div class="animated flipInX d-inline-block ml-3 count">
        <%= @article.likes.count %>
    </div>
  <% end %>