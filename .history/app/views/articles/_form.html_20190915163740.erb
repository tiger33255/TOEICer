    <%=form_with model:@article, local:true do |f| %>

        <div class="mx-auto container">

            <div class="field">
                <%= f.label:タイトル,class: "" %><br>
                <%= f.text_field :title, autofocus: true, class: "col-6 form-control" %>
            </div>

            <div class="field">
                <%= f.label :記事, class: "" %><br>
                <%= f.text_area :body, id: "editor" %>
            </div>

            <div class="field">
                <%= f.attachment_field :article_image %>
            </div>

            <div class="actions text-right col-8 offset-md-4", style="margin-bottom: 60px; margin-top: 60px;">
                    <%= f.submit "投稿", class: "btn btn-success mx-auto btn-lg" %>
            </div>
        </div>
    <% end %>


    <script src="//cdn.ckeditor.com/4.11.4/full/ckeditor.js"></script>
    <script>
            //エディタへの設定を適用する
            CKEDITOR.replace('editor', {
                language: 'ja',
                uiColor: '#EEEEEE',
                height: 400,
              // webからコピペした際でもプレーンテキストを貼り付けるようにする
                forcePasteAsPlainText: true,
            });
          </script>
