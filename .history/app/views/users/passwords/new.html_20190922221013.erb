  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class= "offset-2">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
    <div class= "container">
      <div class="mt-5">
        <div class="field col-7 offset-md-2">
          <%= f.label :email, "メールアドレスを入力ください" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg w-100" %>
        </div>

        <div class="actions text-right col-9 mt-md-5">
          <%= f.submit "送信", class: "btn btn-success mx-auto btn-lg" %>
        </div>
    </div>
  <% end %>
    <div class="col-9 mt-md-3 text-right">
        <%= render "users/shared/links"%>
    </div>
	  </div>