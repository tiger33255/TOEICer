<%= form_with url: users_unsubscribes_path, method: :delete, local:true do |f| %>

    <div class="mx-auto container text-align">
        <div class="row">
            <div class="field col-8 d-flex align-items-center">
                <%= f.label :パスワード　%><br />
                <%= f.password_field :password, autofocus: true, autocomplete: "password", class: "col-lg-offset-3 form-control form-control-lg w-100" %>
            </div>

            <div class="text-right col-10">
                <%= f.submit '退会', class: "btn btn-danger mx-auto btn-lg"%>
            </div>
        </div>
    <% end %>
    </div>