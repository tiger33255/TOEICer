      <%= image_tag 'quote.jpg', size: "1440x700" %>
  <div class="container-fluid top mt-5">
    <p class="t-theme ml-5">POPULAR</p>
      <div class="row ml-5 top-row">
        <% @all_ranks.each do |rank| %>
          <%= link_to(user_article_path(rank.user_id,rank.id), class: 'link') do %>
            <div class="article popular d-inline-block col-3 m-4 rounded">
                <% if rank.article_image.present? %>
                  <div class="mt-4">
                    <%= attachment_image_tag rank, :article_image,　format: 'jpeg/png', class: "rounded", size: "315x200" %>
                  </div>
                  <% else %>
                  <div class="mt-4">
                    <%= attachment_image_tag rank, :article_image,　format: 'jpeg/png', fallback: "article_eyecatch.png", class: "rounded", size: "315x200" %>
                  </div>
                <% end %>
                <% if rank.part_list.present? %>
                  <div class="d-block ml-4 mt-4">
                    <% rank.part_list.each do |tag| %>
                      <%= link_to "Part"+tag, tag_path(tag), class: "label label-success" %>
                    <% end %>
                  </div>
                  <% else %>
                  <% end %>
              <div class="col mt-5 mb-5 t-title">
                <%= link_to rank.title, user_article_path(rank.user_id,rank.id), class: "link" %>
              </div>
            </div>
          <% end %>
          <% end %>
      </div>
    <p class="t-theme ml-5 mt-5">NEW ARTICLE</p>
      <div class="row ml-5">
          <% @new_articles.each do |rank| %>
            <%= link_to(user_article_path(rank.user_id,rank.id), class: 'link') do %>
              <div class="article popular d-inline-block col-3 m-4">
                  <% if rank.article_image.present? %>
                    <div class="mt-4">
                      <%= attachment_image_tag rank, :article_image,　format: 'jpeg/png', class: "rounded", size: "315x200" %>
                    </div>
                    <% else %>
                    <div class="mt-4">
                      <%= attachment_image_tag rank, :article_image,　format: 'jpeg/png', fallback: "article_eyecatch.png", class: "rounded", size: "315x200" %>
                    </div>
                  <% end %>
                  <% if rank.part_list.present? %>
                    <div class="d-block ml-4 mt-4">
                      <% rank.part_list.each do |tag| %>
                        <%= link_to "Part"+tag, tag_path(tag), class: "label label-success" %>
                      <% end %>
                    </div>
                    <% else %>
                    <% end %>
                <div class="col mt-5">
                  <%= link_to rank.title, user_article_path(rank.user_id,rank.id), class: "link" %>
                </div>
              </div>
            <% end %>
            <% end %>
        </div>
  </div>